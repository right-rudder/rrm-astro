---
import ImageComp from "./ImageComp.astro";

const { heading, organizations } = Astro.props;
---

<section class="py-6 flex flex-col justify-center align-middle items-center">
  <h3 class="px-9 text-center font-bold text-2xl text-primary-600">
    {heading}
  </h3>
  <div
    class="max-w-4xl mt-6 flex flex-wrap justify-center gap-10 items-center align-middle"
  >
    {
      organizations.map((org) => (
        <a href={org.link} target="_blank">
          <ImageComp
            imagePath={org.imagePath}
            imageAlt={org.imageAlt}
            styles="h-20 max-w-32 object-contain"
          />
        </a>
      ))
    }
  </div>
</section>
