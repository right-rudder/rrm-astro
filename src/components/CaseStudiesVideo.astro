---
import ImageComp from "./ImageComp.astro";
import { YouTube } from "astro-embed";

const { upperHeading, heading, cases } = Astro.props;
---

<section
  class="lg:m-6 py-16 md:py-20 bg-gradient-to-b from-primary-800 to-primary flex flex-col justify-center align-middle items-center"
>
  <h3 class="text-center font-medium text-2xl text-primary-300">
    {upperHeading}
  </h3>
  <h4
    class="text-center font-normal text-5xl text-primary-200"
    set:html={heading}
  />
  <div
    class="mt-14 px-4 lg:px-8 flex flex-wrap justify-center gap-6 lg:gap-8 w-full max-w-6xl"
  >
    {
      cases.map((c) => (
        <div class="group bg-white w-full lg:w-[calc(50%-1rem)] rounded-2xl hover:ring-1 hover:ring-slate-900 overflow-hidden hover:shadow-2xl transform hover:-translate-y-2 hover:scale-105 transition-all duration-300">
          <div class="aspect-video w-full bg-gray-900 relative overflow-hidden">
            <YouTube id={c.youtubeId} />
          </div>

          <div class="p-6">
            <div class="mb-6">
              <p
                class="text-gray-700 text-xl text-center italic leading-relaxed font-medium"
                set:html={`"${c.quote}"`}
              />
            </div>

            <div class="space-y-4">
              <p
                class="text-gray-600 leading-relaxed line-clamp-3"
                set:html={c.result}
              />
              <a
                href={c.link}
                class="inline-flex items-center gap-2 text-xs md:text-lg text-primary-600 font-semibold hover:text-primary-700 transition-colors duration-200"
              >
                Read <span class="text-gray-800">{c.client}'s</span> full case
                study
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
