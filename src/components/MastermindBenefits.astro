---
const { data } = Astro.props;
---

<section class="bg-white py-24 sm:py-32" id="benefits">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center lg:max-w-4xl">
      <p
        class="text-base font-semibold leading-7 text-primary-700"
        set:html={data.upperHeading}
      />
      <h2
        class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl"
        set:html={data.heading}
      />
      <p
        class="mt-6 text-lg leading-8 text-gray-600"
        set:html={data.description}
      />
    </div>

    <div class="mx-auto mt-16 max-w-7xl lg:mt-20">
      <dl
        class="grid max-w-xl grid-cols-1 gap-8 lg:max-w-none lg:grid-cols-2 xl:grid-cols-3"
      >
        {
          data.benefits.map((benefit) => (
            <div class="flex flex-col">
              <dt class="flex items-center gap-x-3 text-lg font-semibold leading-7 text-gray-900">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary-600">
                  <svg
                    class="h-6 w-6 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d={benefit.icon}
                    />
                  </svg>
                </div>
                {benefit.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600">
                <p class="flex-auto">{benefit.description}</p>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
