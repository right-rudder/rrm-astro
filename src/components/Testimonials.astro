---
const { upperHeading, heading, quotes } = Astro.props;
---

<section
  class="lg:m-6 py-16 md:py-20 bg-gradient-to-b from-primary-200 to-primary-300 flex flex-col justify-center align-middle items-center"
>
  <h3 class="text-center font-medium text-2xl text-primary-dark-600">
    {upperHeading}
  </h3>
  <h4
    class="text-center font-normal text-5xl text-primary-dark-800"
    set:html={heading}
  />
  <div
    class="mt-14 px-3 md:px-0 flex flex-wrap gap-6 md:gap-0 justify-center w-full divide-y-2 md:divide-y-0 lg:divide-x-2 divide-primary-600/40"
  >
    {
      quotes.map((quote) => (
        <div class="w-full py-12 md:w-1/2 lg:w-1/3 flex flex-col min-h-72">
          <p class="text-center font-black tracking-tight text-3xl">
            {quote.author}
          </p>
          <p class="text-center font-normal text-lg">{quote.client}</p>
          <div class="mt-3 w-full bg-accent py-2 px-4 text-center font-semibold italic">
            "{quote.extract}"
          </div>
          <p class="px-16 mt-3 text-center text-lg leading-relaxed">
            {quote.quote}
          </p>
        </div>
      ))
    }
  </div>
</section>
