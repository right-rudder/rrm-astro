---
const { data } = Astro.props;
---

<section id="warning-cta" class="m-3 md:m-6 lg:m-12 relative py-12 lg:py-20">
  <div
    class="absolute top-0 z-[-2] h-full w-full bg-accent bg-[radial-gradient(#ffffff33_1px,#fefefe_1px)] bg-[size:20px_20px]"
  >
  </div>
  <div class="px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      {
        data.icon && (
          <div class="mx-auto flex items-center justify-center animate-slow-zoom">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="#fefefe99"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="size-44 text-accent"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d={data.icon}
              />
            </svg>
          </div>
        )
      }
      {
        data.heading && (
          <h2
            class="text-5xl my-5 font-bold tracking-tight text-accent animate-mid-zoom"
            set:html={data.heading}
          />
        )
      }
      {
        data.description && (
          <p class="mx-auto mt-3 max-w-2xl text-3xl font-medium leading-tight text-primary-dark-600">
            {data.description}
          </p>
        )
      }
      <div class="mt-3 flex items-center justify-center gap-x-6">
        <a href={data.button.link} class="btn-primary">{data.button.text}</a>
      </div>
    </div>
  </div>
</section>
