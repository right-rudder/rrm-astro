---
import { ImQuotesLeft } from "react-icons/im";
import { ImQuotesRight } from "react-icons/im";

const { data } = Astro.props;
---

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none md:grid-cols-2 lg:grid-cols-3 divide-y-2 lg:divide-y-0"
    >
      <div class="col-span-1 md:col-span-2 lg:col-span-1">
        <div class="lg:pr-4">
          <div class="lg:max-w-lg">
            <p class="text-base font-semibold leading-7 text-primary-700">
              {data.upperHeading}
            </p>
            <h2
              class="mt-0 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
              set:html={data.heading}
            />
          </div>
        </div>
        <div class="mt-6">
          {
            data.descriptions.map((desc) => (
              <p
                class="mt-3 text-base leading-7 text-gray-600"
                set:html={desc}
              />
            ))
          }
        </div>
        <div
          class="flex mt-8 relative justify-center align-middle font-bold text-3xl text-primary-600"
        >
          <ImQuotesLeft className="absolute top-3 left-3 text-7xl opacity-30" />
          <p class="py-16 px-6 italic text-center lg:text-left">{data.quote}</p>
          <ImQuotesRight
            className="absolute bottom-3 right-3 text-7xl opacity-30"
          />
        </div>
      </div>
      <dl class="col-span-1 text-base text-gray-600 lg:gap-y-16">
        {
          data.values1.map((value) => (
            <div class="relative pl-12 mt-6">
              <dt class="font-bold text-gray-900">
                <div class="absolute left-0 top-1 font-black text-5xl -z-0 text-accent-500/50">
                  {value.title[0]}
                </div>
                {value.title}
              </dt>
              <dd class=" leading-7">{value.description}</dd>
            </div>
          ))
        }
      </dl>
      <dl class="col-span-1 text-base text-gray-600 lg:gap-y-16">
        {
          data.values2.map((value) => (
            <div class="relative pl-9 mt-6">
              <dt class="font-bold text-gray-900">
                <div class="absolute left-0 top-1 font-black text-5xl -z-0 text-accent-500/50">
                  {value.title[0]}
                </div>
                {value.title}
              </dt>
              <dd class=" leading-7">{value.description}</dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
