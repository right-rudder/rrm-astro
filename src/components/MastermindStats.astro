---
const { data } = Astro.props;
---

<section class="bg-primary-dark-900 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="text-center">
        <p
          class="text-base font-semibold leading-7 text-primary-300"
          set:html={data.upperHeading}
        />
        <h2
          class="text-4xl font-bold tracking-tight text-white sm:text-5xl"
          set:html={data.heading}
        />
        <p
          class="mt-6 text-lg leading-8 text-gray-300"
          set:html={data.paragraph}
        />
      </div>
      <dl
        class="mt-16 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4"
      >
        {
          data.stats.map((stat, index) => (
            <div class="flex flex-col bg-white/5 p-8">
              <dt class="font-semibold leading-6 text-gray-300">
                {stat.label}
              </dt>
              <dd class="order-first text-4xl lg:text-5xl font-semibold tracking-tight text-accent-300">
                {stat.value}
              </dd>
              <dd class="text-sm/3 italic text-gray-400 mt-2">
                {stat.description}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
