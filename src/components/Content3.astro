---
const { data } = Astro.props;
---

<div
  class="py-20 bg-white mx-auto ring-1 ring-primary-100 -mt-12 mb-12 max-w-7xl px-6 sm:mt-0 lg:px-8 xl:-mt-8 shadow-xl"
>
  <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
    <h2 class="text-3xl font-bold tracking-tight text-primary-900 sm:text-4xl">
      {data.heading}
    </h2>
    <div class="mt-6 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
      <div class="lg:w-full lg:max-w-2xl lg:flex-auto">
        <p class="text-xl leading-8 text-gray-600">
          {data.description}
        </p>
        <div class="mt-10 max-w-xl text-base leading-7 text-gray-700">
          {data.paragraphs.map((paragraph) => <p class="mt-2">{paragraph}</p>)}
        </div>
      </div>
      <div class="lg:flex lg:flex-auto lg:justify-center">
        <dl class="w-64 space-y-8 xl:w-80">
          {
            data.facts.map((fact) => (
              <div class="flex flex-col-reverse">
                <dt class="text-base leading-7 text-gray-600">
                  {fact.description}
                </dt>
                <dd class="text-5xl font-bold tracking-tight text-accent-700">
                  {fact.title}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</div>
