---
import MastermindFormInline from "./MastermindFormInline";

const GHL_MASTERMIND_FORM_WEBHOOK_URL = import.meta.env
  .GHL_MASTERMIND_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;

const { data } = Astro.props;
---

<section
  class="relative isolate bg-gray-900 py-24 sm:py-32 group overflow-hidden"
  id={data.id}
>
  <svg
    viewBox="0 0 1024 1024"
    class="absolute opacity-90 duration-700 left-1/2 top-1/2 -z-10 h-[64rem] w-[64rem] -translate-x-1/2 -translate-y-1/2 [mask-image:radial-gradient(closest-side,white,transparent)]"
    aria-hidden="true"
  >
    <circle
      cx="512"
      cy="512"
      r="512"
      fill="url(#mastermind-gradient)"
      fill-opacity="0.7"></circle>
    <defs>
      <radialGradient id="mastermind-gradient">
        <stop stop-color="#fbe18c"></stop>
        <stop offset="1" stop-color="#E935C1"></stop>
      </radialGradient>
    </defs>
  </svg>

  <div class="mx-auto max-w-4xl px-0 md:px-6 lg:px-8">
    <div class="text-center">
      <p
        class="text-base font-semibold leading-7 text-primary-300"
        set:html={data.upperHeading}
      />
      <h2
        class="text-4xl font-bold tracking-tight text-accent sm:text-5xl"
        set:html={data.heading}
      />
      <p
        class="mt-6 text-lg leading-6 text-gray-300"
        set:html={data.description}
      />
    </div>

    <div
      class="mt-12 bg-white/10 backdrop-blur-sm rounded-2xl p-2 md:p-8 lg:p-12"
    >
      <div class="text-center">
        <MastermindFormInline
          client:visible
          webhook={GHL_MASTERMIND_FORM_WEBHOOK_URL}
          apiKey={PORTAL_API_KEY}
        />
        <p
          class="text-gray-200 text-sm mt-6 text-center italic"
          set:html={data.note}
        />
      </div>
    </div>
  </div>
</section>
