---
import ImageComp from "./ImageComp.astro";

const { heading, organizations } = Astro.props;
---

<section
  class="py-12 flex flex-col justify-center align-middle items-center bg-primary/20"
>
  <h3 class="px-12 text-center font-bold text-2xl text-primary-dark">
    {heading}
  </h3>
  <div
    class="max-w-5xl mt-12 flex flex-wrap justify-center gap-8 items-center align-middle"
  >
    {
      organizations.map((org) => (
        <a href={org.link} target="_blank">
          <ImageComp
            imagePath={org.imagePath}
            imageAlt={org.imageAlt}
            styles="h-32 max-w-52 max-h-32 object-contain hover:scale-105 duration-300 ease-in-out"
          />
        </a>
      ))
    }
  </div>
</section>
