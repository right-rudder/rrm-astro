---
const { upperHeading, heading, services } = Astro.props;
---

<section
  class="lg:m-6 py-16 md:py-20 bg-primary-dark-200 flex flex-col justify-center align-middle items-center"
>
  <h3 class="text-center font-medium text-xl md:text-2xl text-primary-dark-400">
    {upperHeading}
  </h3>
  <h4
    class="text-center px-3 md:px-24 font-medium text-4xl md:text-5xl text-primary-950"
    set:html={heading}
  />
  <div class="mt-10 px-4 md:px-0 flex flex-wrap justify-center w-full gap-3">
    {
      services.map((service) => (
        <a
          href={service.link}
          target={`${service.link.includes("http") ? "_blank" : "_self"}`}
          class="w-full relative min-h-64 rounded-md flex justify-between align-middle items-center p-6 group md:w-1/3 lg:w-1/4 bg-primary-dark-800 hover:ring-2 hover:ring-primary-950"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 28 28"
            fill="none"
            stroke-width="1.5"
            stroke="currentColor"
            class="absolute top-1 right-1 size-56 text-primary-400/30 -z-0 duration-150 group-hover:size-44 group-hover:text-primary-dark/50"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d={service.icon}
            />
          </svg>
          <div class="w-full z-10">
            <div
              class="font-black py-2 text-left text-3xl leading-7 uppercase text-accent-400"
              set:html={service.name}
            />
            <p class="text-lg font-normal leading-6 text-primary-50 text-left">
              {service.description}
            </p>
          </div>
        </a>
      ))
    }
  </div>
</section>
