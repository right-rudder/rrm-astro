---
import ImageComp from "./ImageComp.astro";

const { upperHeading, heading, cases } = Astro.props;
---

<section
  class="lg:m-6 py-16 md:py-20 bg-gradient-to-b from-primary-800 to-primary flex flex-col justify-center align-middle items-center"
>
  <h3 class="text-center font-medium text-2xl text-primary-200">
    {upperHeading}
  </h3>
  <h4
    class="text-center font-normal text-5xl text-primary-100"
    set:html={heading}
  />
  <div class="mt-14 flex flex-wrap justify-center md:gap-2 lg:gap-6 w-full">
    {
      cases.map((c) => (
        <div class="bg-primary-dark-800 w-full md:w-2/5 lg:w-1/3 mt-3 md:rounded-xl overflow-hidden">
          <div class="aspect-video w-full bg-white">
            <ImageComp
              imagePath={c.imagePath}
              imageAlt={c.imageAlt}
              styles="h-full object-contain"
            />
          </div>
          <div class="bg-accent flex justify-center align-middle items-center px-6 text-center text-lg font-semibold italic leading-tight h-24">
            <p set:html={`"${c.quote}"`}></p>
          </div>
          <div class="pt-6 flex justify-center lg:gap-3 items-center align-middle bg-primary-dark-800">
            <div class="w-1/2 lg:w-1/3">
              <p class="text-center text-5xl text-accent font-black">
                {c.metric1.value}
              </p>
              <p class="text-center text-2xl text-primary-100">
                {c.metric1.label}
              </p>
            </div>
            <div class="w-1/2 lg:w-1/3">
              <p class="text-center text-5xl text-accent font-black">
                {c.metric2.value}
              </p>
              <p class="text-center text-2xl text-primary-100">
                {c.metric2.label}
              </p>
            </div>
          </div>
          <div class="px-8 pt-4 flex flex-col justify-between pb-6 font-light leading-snug text-lg text-white bg-primary-dark-800 md:min-h-96 lg:min-h-64">
            <p class="mb-4">{c.result}</p>
            <a
              href={c.link}
              class="font-bold text-primary-400 hover:text-accent duration-200"
            >
              Read about <span class="text-primary-100">{c.client}'s</span> case
              study &rarr;
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>
