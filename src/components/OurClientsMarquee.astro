---
import OurClientsLogos from "./OurClientsLogos.jsx";

const { data } = Astro.props;
---

<div class="w-full">
  <div
    class="relative isolate overflow-hidden bg-primary-dark px-6 py-16 text-center rounded-sm"
  >
    <h2
      set:html={data.heading}
      class="mx-auto max-w-2xl text-6xl font-bold capitalize tracking-tight text-accent"
    />
    <p
      class="mx-auto my-8 max-w-xl text-lg leading-8 text-gray-300"
      set:html={data.description}
    />
    <OurClientsLogos client:only="”react”" />
    <div
      class="absolute -top-24 right-0 -z-10 transform-gpu blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1404/767] w-[87.75rem] bg-gradient-to-r from-[#80caff] to-[#4f46e5] opacity-20"
        style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"
      >
      </div>
    </div>
  </div>
</div>
