---
const { data } = Astro.props;
---

<div
  class="relative isolate overflow-hidden bg-white px-6 py-24 sm:py-32 lg:overflow-visible lg:px-0"
>
  <div class="mx-auto max-w-6xl lg:pr-4">
    <div class="my-9 text-center">
      <p class="text-base font-semibold leading-7 text-primary-700">
        {data.upperHeading}
      </p>
      <h1 class="mt-0 text-4xl font-bold tracking-tight text-gray-900">
        {data.heading}
      </h1>
      <p class="mt-6 text-xl leading-8 text-gray-700">
        {data.description}
      </p>
    </div>
  </div>
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <svg
      class="absolute left-[max(50%,25rem)] top-0 h-[64rem] w-[128rem] -translate-x-1/2 stroke-gray-200 [mask-image:radial-gradient(64rem_64rem_at_top,white,transparent)]"
      aria-hidden="true"
    >
      <defs>
        <pattern
          id="e813992c-7d03-4cc4-a2bd-151760b470a0"
          width="200"
          height="200"
          x="50%"
          y="-1"
          patternUnits="userSpaceOnUse"
        >
          <path d="M100 200V.5M.5 .5H200" fill="none"></path>
        </pattern>
      </defs>
      <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
        <path
          d="M-100.5 0h201v201h-201Z M699.5 0h201v201h-201Z M499.5 400h201v201h-201Z M-300.5 600h201v201h-201Z"
          stroke-width="0"></path>
      </svg>
      <rect
        width="100%"
        height="100%"
        stroke-width="0"
        fill="url(#e813992c-7d03-4cc4-a2bd-151760b470a0)"></rect>
    </svg>
  </div>
  <div class="mx-auto pb-6 pt-9 px-6 rounded-sm bg-gray-100/70 max-w-4xl">
    <h3
      class="mx-auto text-center pb-4 border-b-4 border-primary-600 font-semibold text-3xl"
    >
      {data.listHeading}
    </h3>
    <ul role="list" class="divide-y divide-white">
      {
        data.list.map((item) => (
          <li class="relative py-5 bg-primary-dark-500/10 hover:bg-primary-500/30 duration-200">
            <div class="px-4 sm:px-6 lg:px-8">
              <div class="mx-auto flex max-w-4xl flex-col lg:flex-row justify-between gap-x-6">
                <div class="flex min-w-0 gap-x-4">
                  <div class="min-w-0 flex-auto">
                    <p class="text-2xl font-semibold leading-6 text-gray-900">
                      <a
                        href={item.link}
                        target={item.link.includes("http") ? "_blank" : "_self"}
                      >
                        <span class="absolute inset-x-0 -top-px bottom-0" />
                        {item.title}
                      </a>
                    </p>
                    <p class="mt-1 flex text-xs leading-5 text-gray-500">
                      <a
                        href={`mailto:${item.mailto}?subject=${item.title}`}
                        class="relative truncate hover:underline"
                      >
                        {item.mailto}
                      </a>
                    </p>
                  </div>
                </div>
                <div class="flex shrink-0 items-center gap-x-4">
                  <div class="max-w-lg text-xs text-justify">
                    <p class="">{item.description}</p>
                  </div>
                  <svg
                    class="h-5 w-5 flex-none text-gray-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>
