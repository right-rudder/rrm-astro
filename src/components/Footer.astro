---
import { FaPhoneSquareAlt } from "react-icons/fa";
import {
  AiFillFacebook,
  AiFillInstagram,
  AiFillLinkedin,
  AiFillYoutube,
} from "react-icons/ai";
import {
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TWITTER_URL,
  YOUTUBE_URL,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import logo from "../assets/RRM-hor-textWhite-bgTrans.png";
import { Image } from "astro:assets";
import { FaSquareXTwitter } from "react-icons/fa6";

const actualYear = new Date().getFullYear();

const { pathname } = Astro.url;
---

<footer
  class="relative bg-gradient-to-b from-primary-dark-700 font-sans to-primary-dark-800"
>
  <div
    class="px-4 pt-24 pb-16 lg:pb-2 md:pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div class="grid gap-16 row-gap-10 mb-8 lg:grid-cols-6">
      <div class="lg:col-span-2">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center items-center w-full"
        >
          <Image
            src={logo}
            alt="Right Rudder Marketing Logo"
            class="object-contain h-36 w-auto px-5 lg:px-0 drop-shadow-lg"
          />
        </a>
        <div class="mt-2 lg:max-w-sm">
          <p
            class="text-sm text-white px-3 lg:px-0 text-center lg:text-justify"
          >
            {SITE_DESCRIPTION}
          </p>
          <div
            class="flex justify-center lg:justify-start align-middle items-center w-full"
          >
            <a
              href="/privacy-policy"
              class="mt-3 mr-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Privacy Policy
            </a>
            <span class="text-accent-200 text-sm pt-3"> &#x2022; </span>
            <a
              href="/terms-of-service"
              class="mt-3 ml-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Terms of Service
            </a>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-2 mt-8 gap-9 lg:col-span-4 lg:grid-cols-9">
        <div class="lg:col-span-2">
          <p class="font-bold tracking-wide text-accent-200">Services</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/flight-school-website-design"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Web Design
              </a>
            </li>
            <li>
              <a
                href="/flight-school-seo"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >SEO
              </a>
            </li>
            <li>
              <a
                href="/resources/video-production"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Video Production
              </a>
            </li>
            <li>
              <a
                href="/how-to-enroll-more-students-with-google-ads-in-2024"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Google Ads
              </a>
            </li>
            <li>
              <a
                href="/how-to-run-effective-facebook-ads-in-2024"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Facebook Ads
              </a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://flightschoolcrm.com/"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >CRM
              </a>
            </li>
            <li>
              <a
                href="/how-to-optimize-google-my-business-2024"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >GMB Profile
              </a>
            </li>
            <!-- <li>
              <a
                href="/services/media-production"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Media
              </a>
            </li> -->
            <li>
              <a
                href="/marketing-system"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Marketing System
              </a>
            </li>
          </ul>
        </div>
        <div class="text-right lg:text-left lg:col-span-2">
          <p class="font-bold tracking-wide text-accent-200">Quick Links</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/resources/marketing-checklist"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Checklists
              </a>
            </li>
            <li>
              <a
                href="/resources/flight-school-keywords"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Keywords
              </a>
            </li>
            <li>
              <a
                href="/our-flight-schools"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Case Studies
              </a>
            </li>
            <li>
              <a
                href="/podcasts"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Podcast</a
              >
            </li>
            <li>
              <a
                href="/webinars"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Webinars</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Contact Us</a
              >
            </li>
            <li>
              <a
                href="/blog"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Blog</a
              >
            </li>
          </ul>
        </div>
        <div class="lg:col-span-2">
          <p class="font-bold tracking-wide text-accent-200">About</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/about/who-we-are"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Who We Are</a
              >
            </li>
            <!-- <li>
              <a
                href="/about/why-choose-us"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Why Choose Us</a
              >
            </li> -->
            <li>
              <a
                href="/about/testimonials"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Testimonials</a
              >
            </li>
            <li>
              <a
                href="/about/partners-affiliates"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Partners & Affiliates</a
              >
            </li>
            <li>
              <a
                href="/about/investors"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Investors</a
              >
            </li>
            <li>
              <a
                href="/about/careers"
                class="transition-colors duration-300 text-white hover:text-accent-100"
                >Careers</a
              >
            </li>
          </ul>
        </div>
        <div class="grid grid-cols-1 gap-y-4 lg:col-span-3">
          {
            LOCATIONS.map((location, index) => (
              <div class="text-right lg:text-left bg-white/20 rounded p-3">
                <p class="font-bold tracking-wide text-accent-200">
                  {location.title}
                </p>
                <a
                  href={location.gMaps}
                  target="_blank"
                  class="mt-2 space-y-2 transition-colors duration-300 text-white hover:text-accent-100"
                >
                  <>
                    <span class="text-sm">{location.address}</span>
                    <br />
                    <span class="text-sm">
                      {location.city}, {location.state} {location.zip}
                    </span>
                  </>
                </a>
                <a
                  href={`tel:${location.phone}`}
                  class="text-right justify-end lg:justify-start lg:text-left transition-colors duration-300 text-white hover:text-accent-100 flex items-center align-middle mt-1"
                >
                  <FaPhoneSquareAlt className="mr-2 text-lg" />
                  {location.phone}
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 pb-10 border-t border-accent">
    <div
      class="mx-auto flex flex-col gap-2 lg:flex-row justify-between items-center align-middle max-w-7xl"
    >
      <p class="text-sm text-gray-100 text-center">
        Â© Copyright {actualYear} Right Rudder Marketing LLC. All rights reserved.
      </p>
      <div
        class="flex items-center justify-center align-middle mt-4 space-x-4 sm:mt-0"
      >
        <a
          href={LINKEDIN_URL}
          target="_blank"
          name="LinkedIn"
          aria-label="LinkedIn"
          title="LinkedIn"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <AiFillLinkedin className="size-8" />
        </a>
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          name="Instagram"
          aria-label="Instagram"
          title="Instagram"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <AiFillInstagram className="size-8" />
        </a>
        <a
          href={FACEBOOK_URL}
          target="_blank"
          name="Facebook"
          aria-label="Facebook"
          title="Facebook"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <AiFillFacebook className="size-8" />
        </a>
        <a
          href={TWITTER_URL}
          target="_blank"
          name="X"
          aria-label="X"
          title="X"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <FaSquareXTwitter className="size-8" />
        </a>
        <a
          href={YOUTUBE_URL}
          target="_blank"
          name="Youtube"
          aria-label="Youtube"
          title="Youtube"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <AiFillYoutube className="size-8" />
        </a>
      </div>
    </div>
  </div>
</footer>
