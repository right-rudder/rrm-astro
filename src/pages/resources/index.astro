---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import ImageComp from "../../components/ImageComp.astro";
import RelatedContent from "../../components/RelatedContent.astro";
import {
  generateKeywords,
  AVIATION_KEYWORDS,
  TARGET_LOCATIONS,
} from "../../utils/seo";

const headerData = {
  imagePath: "/src/assets/avel-chuklanov-QbTBCUJLqKY-unsplash(1).jpg",
  imageAlt:
    "Right Rudder Marketing - Pilot student and instructor in a flight school aircraft",
  headerH1: `<span class="text-accent-300">Flight School<br>Resources</span>`,
  paragraph: `
    Explore our collection of resources designed to help flight schools enhance their marketing strategies and operational efficiency.
  `,
};

const resources = [
  {
    title: "Flight School Handbook",
    description:
      "A comprehensive guide with marketing strategies specifically tailored for flight schools.",
    url: "/resources/flight-school-handbook",
    imageUrl: "/src/assets/book-tim.jpg",
  },
  {
    title: "Aviation Keywords Guide",
    description:
      "Essential keywords to optimize your flight school's online presence and improve search engine rankings.",
    url: "/resources/flight-school-keywords",
    imageUrl: "/src/assets/DSC00637.jpg",
  },
  {
    title: "Marketing Checklist",
    description:
      "A step-by-step marketing checklist to ensure your flight school's marketing strategy is comprehensive and effective.",
    url: "/resources/marketing-checklist",
    imageUrl: "/src/assets/hans-peter-gauster-3y1zF4hIPCg-unsplash.jpg",
  },
  {
    title: "SOP Templates",
    description:
      "Standard Operating Procedure templates designed specifically for flight schools to streamline operations.",
    url: "/resources/sop-templates",
    imageUrl: "/src/assets/IMG_9616.jpg",
  },
  {
    title: "Google My Business Optimization",
    description:
      "Learn how to properly optimize your Google My Business listing to attract more potential students.",
    url: "/resources/gmb",
    imageUrl: "/src/assets/chuttersnap-M2-_GRvWWg0-unsplash.jpg",
  },
  {
    title: "Video Production",
    description:
      "Professional video production services tailored for flight schools to showcase your facilities and aircraft.",
    url: "/resources/video-production",
    imageUrl: "/src/assets/tadeu-jnr-kAzSa_azENM-unsplash.webp",
  },
];

const pageMetadata = {
  pageTitle: "Right Rudder Marketing | Flight School Resources",
  pageDescription:
    "Access our comprehensive collection of aviation marketing resources for flight schools including guides, templates, checklists and more.",
  pageKeywords:
    "flight school resources, aviation marketing, flight school handbook, aviation keywords, marketing checklist, SOP templates, Google My Business optimization",
};
---

<BaseLayout
  siteTitle={pageMetadata.pageTitle}
  siteDescription={pageMetadata.pageDescription}
  keywords={pageMetadata.pageKeywords}
>
  <!-- HEADER -->
  <Header data={headerData} />

  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Main content section -->
      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          resources.map((resource) => (
            <div class="flex flex-col rounded-lg shadow-lg overflow-hidden transition-all hover:shadow-xl">
              <div class="flex-shrink-0 max-h-52">
                <ImageComp
                  imagePath={resource.imageUrl}
                  imageAlt={resource.title}
                  styles="h-48 w-full object-cover"
                />
              </div>
              <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                <div class="flex-1">
                  <a href={resource.url} class="block">
                    <h3 class="text-xl font-semibold text-gray-900">
                      {resource.title}
                    </h3>
                    <p class="mt-1 text-base text-gray-500">
                      {resource.description}
                    </p>
                  </a>
                </div>
                <div class="mt-6">
                  <a
                    href={resource.url}
                    class="btn btn-primary inline-flex items-center"
                  >
                    Get {resource.title.split(" ").slice(-1)[0]}
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <!-- CTA section -->
      <div class="mt-20 text-center">
        <h2 class="text-3xl lg:text-5xl font-bold text-gray-900">
          Need Personalized Marketing Help?
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-600">
          Our team specializes in helping flight schools attract more students
          through strategic marketing.
        </p>
        <div class="mt-8">
          <a
            href="/schedule-call"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700"
          >
            Schedule a Free Consultation
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced internal linking for better SEO -->
  <RelatedContent
    currentPage={Astro.url.pathname}
    category="resources"
    keywords={[
      "flight school resources",
      "marketing tools",
      "free guides",
      "aviation marketing",
    ]}
  />
</BaseLayout>
