---
import type { GetStaticPaths } from "astro";
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
  generateLocationKeywords,
  generateLocationSchema,
} from "../../utils/seo";
import HeaderScreen from "../../components/HeaderScreen.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const locations = await getCollection("locations");
  return locations.map((location) => ({
    params: { slug: location.slug },
    props: { location },
  }));
};

interface Props {
  location: CollectionEntry<"locations">;
}

const { location } = Astro.props as Props;
const { Content } = await location.render();

// Generate SEO data
const keywords = generateLocationKeywords(
  location.data.state,
  location.data.type === "city" ? location.data.city : undefined
);
const schema = generateLocationSchema(location.data);

const header = {
  stars: true,
  imagePath: "/src/assets/flying-over-right-rudder-marketing.jpeg",
  imageAlt:
    "fly over Right Rudder Marketing - Digital Marketing Agency for Flight Schools",
  headerH1: `Flight School Marketing ${location.data.type === "city" ? location.data.city : location.data.state}`,
  paragraph: `Enroll more pilots in ${location.data.type === "city" ? location.data.city : location.data.state} and leave a lasting impact to the next generation of future aviators while saving time and increasing profits and revenue.`,
  buttons: [
    {
      name: "Our Marketing System",
      link: "/marketing-system",
      primary: false,
    },
    {
      name: "Free Marketing Analysis",
      link: "/schedule-call",
      primary: false,
    },
  ],
};

// Create page title and description
const pageTitle = `${header.headerH1} | Right Rudder Marketing`;
const pageDescription =
  location.data.metaDescription || location.data.description;

// Safe access to data with defaults
const flightSchoolCount = location.data.flightSchoolCount || 0;
const population = location.data.population || 0;
const majorAirports = location.data.majorAirports || [];
const marketCharacteristics = location.data.marketCharacteristics || [];
const weatherAdvantages = location.data.weatherAdvantages || [];
const relatedLocations = location.data.relatedLocations || [];
---

<BaseLayout
  siteTitle={pageTitle}
  siteDescription={pageDescription}
  keywords={location.data.keywords || keywords.primary.join(", ")}
>
  <!-- HEADER -->
  <HeaderScreen content={header} />
  <Fragment slot="head">
    <!-- Location-specific structured data -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <!-- Open Graph tags -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`https://rightruddermarketing.com/locations/${location.slug}`}
    />

    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />

    <!-- Canonical URL -->
    <link
      rel="canonical"
      href={`https://rightruddermarketing.com/locations/${location.slug}`}
    />
  </Fragment>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Right Rudder Marketing in {
          location.data.type === "city"
            ? location.data.city
            : location.data.state
        }
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {location.data.description}
      </p>
    </div>

    <!-- Location Quick Facts -->
    <div class="bg-blue-50 rounded-lg p-6 mb-8">
      <h3 class="text-2xl text-center font-semibold text-gray-900 mb-4">
        Market Overview
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">
            {flightSchoolCount}
          </div>
          <div class="text-sm text-gray-600">Flight Schools</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">
            {population.toLocaleString()}
          </div>
          <div class="text-sm text-gray-600">Population</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">
            {majorAirports.length}
          </div>
          <div class="text-sm text-gray-600">Major Airports</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 capitalize">
            {location.data.competitiveLevel || "Unknown"}
          </div>
          <div class="text-sm text-gray-600">Competition Level</div>
        </div>
      </div>
    </div>

    <!-- Market Characteristics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">
          Market Characteristics
        </h3>
        <ul class="space-y-2">
          {
            marketCharacteristics.map((characteristic) => (
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700">{characteristic}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">
          Weather Advantages
        </h3>
        <ul class="space-y-2">
          {
            weatherAdvantages.map((advantage) => (
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-blue-500 mt-0.5 mr-2 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700">{advantage}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Major Airports -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Major Airports</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
        {
          majorAirports.map((airport) => (
            <div class="bg-gray-100 rounded-lg px-3 py-2 text-center">
              <span class="font-mono font-semibold text-gray-900">
                {airport}
              </span>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Main Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Call to Action -->
    <div
      class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg p-8 text-center text-white mt-12"
    >
      <h2 class="text-3xl font-bold mb-4">
        Ready to Grow Your Flight School in {
          location.data.type === "city"
            ? location.data.city
            : location.data.state
        }?
      </h2>
      <p class="text-xl mb-6">
        Get a free consultation and see how we can help your aviation academy
        succeed in this market.
      </p>
      <div
        class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center"
      >
        <a
          href="/schedule-call"
          class="inline-block bg-white text-blue-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors"
        >
          Get Free Consultation
        </a>
        <a
          href="/our-flight-schools"
          class="inline-block border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
        >
          Check Our Flight Schools
        </a>
      </div>
    </div>

    <!-- Related Locations -->
    {
      relatedLocations.length > 0 && (
        <div class="mt-12">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6">
            Related Markets
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {relatedLocations.map((relatedSlug) => (
              <a
                href={`/locations/${relatedSlug}`}
                class="block bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow border border-gray-200 hover:border-blue-300"
              >
                <div class="font-semibold text-gray-900 capitalize">
                  {relatedSlug.replace(/-/g, " ")}
                </div>
                <div class="text-sm text-gray-600 mt-1">
                  Flight School Marketing
                </div>
              </a>
            ))}
          </div>
        </div>
      )
    }
  </main>
</BaseLayout>

<style>
  .prose {
    color: #374151;
  }

  .prose h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1.5rem;
  }

  .prose h2 {
    font-size: 1.875rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .prose ul {
    margin-bottom: 1rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    font-weight: 600;
    color: #1f2937;
  }
</style>
