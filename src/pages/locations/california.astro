---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Content from "../../components/Content.astro";
import FlyWithUsCTA from "../../components/FlyWithUsCTA.astro";
import {
  generateKeywords,
  generateFAQSchema,
  generateBreadcrumbSchema,
  generateLandingPageKeywords,
  generateMetaDescription,
  KEYWORD_STRATEGY,
  AVIATION_KEYWORDS,
} from "../../utils/seo";
import RelatedContent from "../../components/RelatedContent.astro";

const pathname = Astro.url.pathname;

// Generate location-specific keywords
const californiaKeywords = generateLandingPageKeywords(
  "location",
  "California"
);

// Enhanced meta description for California
const metaDescription = generateMetaDescription(
  "location",
  "flight school marketing California",
  "Professional flight school marketing services in California. Help your aviation academy grow with targeted digital marketing strategies designed specifically for California flight schools.",
  "California"
);

// Breadcrumb schema
const breadcrumbs = generateBreadcrumbSchema([
  { name: "Home", url: "https://rightruddermarketing.com/" },
  { name: "Locations", url: "https://rightruddermarketing.com/locations" },
  {
    name: "California",
    url: "https://rightruddermarketing.com/locations/california",
  },
]);

// FAQ schema for California page
const californiaFAQs = [
  {
    question: "Why do California flight schools need specialized marketing?",
    answer:
      "California has one of the most competitive flight training markets in the US, with numerous flight schools, universities, and aviation programs. Specialized marketing helps your school stand out, target the right students, and compete effectively in major markets like Los Angeles, San Francisco, and San Diego.",
  },
  {
    question: "What makes California flight school marketing different?",
    answer:
      "California's diverse geography, weather patterns, and aviation regulations create unique marketing opportunities. From highlighting year-round flying weather to targeting international students and career-focused pilots, California flight schools need marketing that addresses specific regional advantages and challenges.",
  },
  {
    question:
      "How can Right Rudder Marketing help my California flight school?",
    answer:
      "We understand California's aviation market, from Part 61 schools in smaller airports to large Part 141 universities. Our team creates targeted campaigns that highlight your school's unique advantages, whether it's location, aircraft fleet, career programs, or training quality, helping you attract students in this competitive market.",
  },
  {
    question:
      "What's the average marketing budget for California flight schools?",
    answer:
      "California flight schools typically invest 5-15% of revenue in marketing, depending on their growth goals and competition level. Urban markets like LA and San Francisco require higher investments, while smaller markets may need less. We help optimize your budget for maximum ROI regardless of your location.",
  },
];

const faqSchema = generateFAQSchema(californiaFAQs);

// California-specific flight schools and aviation facts
const californiaData = {
  pageTitle:
    "Flight School Marketing California | Aviation Digital Marketing CA",
  pageDescription: metaDescription,
  header: {
    imagePath: "/src/assets/california-flight-school-marketing.webp",
    imageAlt: "California flight school with aircraft on sunny tarmac",
    headerH1:
      "California <span class='text-primary'>Flight School Marketing</span> That Delivers Results",
    paragraph:
      "California's competitive aviation market demands expert marketing strategies. Right Rudder Marketing helps California flight schools attract more student pilots, increase enrollment, and grow their business with proven digital marketing tailored to the Golden State's unique aviation landscape. From San Diego to San Francisco, we understand what California flight schools need to succeed.",
    buttons: [
      {
        name: "Get California Strategy Call",
        link: "/schedule-call",
        primary: true,
      },
      {
        name: "View California Success Stories",
        link: "/our-flight-schools",
        primary: false,
      },
    ],
  },
  marketAnalysis: {
    imagePath: "/src/assets/california-aviation-market.webp",
    imageAlt: "California aviation market analysis dashboard",
    contentH3: "California's Unique Flight Training Market",
    contentH4: "Competitive Advantages & Challenges",
    contentParagraphs: [
      "California offers unparalleled advantages for flight training: year-round flying weather, diverse airspace from Class B to uncontrolled airports, and proximity to major aviation employers. However, these advantages also mean intense competition, with over 100 active flight schools across the state competing for students.",
      "Our California flight school marketing strategies leverage these unique market conditions. We help you highlight your competitive advantages, whether it's your location near major airports, specialized training programs, advanced aircraft, or career placement services. We understand how to position your school effectively in California's diverse aviation market.",
    ],
    contentButtonText: "Analyze My California Market",
    contentButtonLink: "/schedule-call",
  },
  services: {
    heading: "California Flight School Marketing Services",
    subheading:
      "Comprehensive digital marketing solutions designed for California's competitive aviation market",
    services: [
      {
        title: "Local SEO for California Markets",
        description:
          "Dominate local search results in your California market, from Los Angeles to Sacramento, with location-specific SEO strategies.",
        benefits: [
          "Google My Business optimization",
          "Local keyword targeting",
          "City-specific landing pages",
          "Review management",
        ],
      },
      {
        title: "Competitive Analysis & Positioning",
        description:
          "Stand out in California's crowded flight school market with strategic positioning that highlights your unique advantages.",
        benefits: [
          "Competitor research",
          "Market positioning strategy",
          "Unique value proposition development",
          "Differentiation strategies",
        ],
      },
      {
        title: "Multi-Location Campaign Management",
        description:
          "Whether you have multiple California locations or serve diverse markets, we manage campaigns that work across the state.",
        benefits: [
          "Multi-location SEO",
          "Geographic ad targeting",
          "Location-specific content",
          "Regional performance tracking",
        ],
      },
      {
        title: "California Aviation Community Outreach",
        description:
          "Connect with California's vibrant aviation community through targeted content and local aviation event marketing.",
        benefits: [
          "Aviation event marketing",
          "Pilot association outreach",
          "Community partnerships",
          "Industry networking support",
        ],
      },
    ],
  },
  locations: {
    heading: "Serving Flight Schools Across California",
    cities: [
      {
        name: "Los Angeles Area",
        airports: ["LAX", "BUR", "LGB", "VNY", "TOA"],
        description:
          "Complex airspace training opportunities with excellent career prospects",
      },
      {
        name: "San Francisco Bay Area",
        airports: ["SFO", "OAK", "SJC", "PAO", "SQL"],
        description:
          "High-tech aviation market with strong demand for professional pilots",
      },
      {
        name: "San Diego",
        airports: ["SAN", "MYF", "SEE", "CRQ"],
        description:
          "Year-round flying weather and military aviation connections",
      },
      {
        name: "Central Valley",
        airports: ["FAT", "MOD", "SAC", "SMF"],
        description:
          "Agricultural aviation opportunities and diverse training environments",
      },
      {
        name: "Orange County",
        airports: ["SNA", "FUL", "AJO"],
        description:
          "Affluent market with high demand for private pilot training",
      },
      {
        name: "Inland Empire",
        airports: ["RAL", "CNO", "RIR"],
        description: "Growing market with less congested airspace for training",
      },
    ],
  },
  cta: {
    imagePath: "/src/assets/california-flight-school-success.webp",
    imageAlt:
      "Successful California flight school owner reviewing marketing results",
    headerH1: "Ready to Dominate California's Flight Training Market?",
    paragraph:
      "Don't let your California flight school get lost in the competition. Our aviation marketing specialists understand California's unique market dynamics and can help your school attract more students, increase enrollment, and grow your business. Get your free California market analysis today.",
    buttons: [
      {
        name: "Get Free California Analysis",
        link: "/schedule-call",
        primary: true,
      },
      {
        name: "View Pricing",
        link: "/contact",
        primary: false,
      },
    ],
  },
};
---

<BaseLayout
  siteTitle={californiaData.pageTitle}
  siteDescription={californiaData.pageDescription}
  keywords={californiaKeywords}
>
  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbs)} />

  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Local Business Schema for California -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "Right Rudder Marketing - California Flight School Marketing",
      "description": "Professional digital marketing services for California flight schools and aviation academies",
      "serviceArea": {
        "@type": "State",
        "name": "California"
      },
      "provider": {
        "@type": "Organization",
        "name": "Right Rudder Marketing",
        "url": "https://rightruddermarketing.com"
      },
      "areaServed": [
        "Los Angeles",
        "San Francisco",
        "San Diego",
        "Sacramento",
        "Fresno",
        "Oakland",
        "Santa Ana",
        "Riverside"
      ]
    }
  </script>

  <!-- HEADER -->
  <Header data={californiaData.header} />

  <!-- MARKET ANALYSIS SECTION -->
  <Content data={californiaData.marketAnalysis} />

  <!-- SERVICES SECTION -->
  <section class="bg-gradient-to-b from-slate-100 to-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          {californiaData.services.heading}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {californiaData.services.subheading}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {
          californiaData.services.services.map((service) => (
            <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
              <h3 class="text-2xl font-bold text-primary mb-4">
                {service.title}
              </h3>
              <p class="text-gray-600 mb-6">{service.description}</p>
              <ul class="space-y-2">
                {service.benefits.map((benefit) => (
                  <li class="flex items-center text-gray-700">
                    <svg
                      class="w-5 h-5 text-primary mr-3"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- LOCATIONS SECTION -->
  <section class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          {californiaData.locations.heading}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We understand the unique characteristics of California's diverse
          aviation markets
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          californiaData.locations.cities.map((city) => (
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-3">{city.name}</h3>
              <div class="mb-3">
                <span class="text-sm font-medium text-gray-600">
                  Key Airports:{" "}
                </span>
                <span class="text-sm text-gray-700">
                  {city.airports.join(", ")}
                </span>
              </div>
              <p class="text-gray-600">{city.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- STATISTICS SECTION -->
  <section class="bg-primary/5 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          California Aviation Market Facts
        </h2>
      </div>

      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-primary mb-2">100+</div>
          <div class="text-gray-600">Active Flight Schools</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">365</div>
          <div class="text-gray-600">Flying Days Per Year</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">15</div>
          <div class="text-gray-600">Class B Airports</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">#1</div>
          <div class="text-gray-600">State for Aviation Jobs</div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ SECTION -->
  <section class="bg-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        California Flight School Marketing FAQ
      </h2>
      <div class="space-y-8">
        {
          californiaFAQs.map((faq) => (
            <div class="border-b border-gray-200 pb-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">
                {faq.question}
              </h3>
              <p class="text-gray-600 leading-relaxed">{faq.answer}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <FlyWithUsCTA data={californiaData.cta} />

  <!-- Enhanced internal linking for better SEO -->
  <RelatedContent
    currentPage={pathname}
    category="Location"
    keywords={[
      "California flight schools",
      "west coast aviation",
      "pilot training",
      "aviation marketing",
    ]}
  />
</BaseLayout>
