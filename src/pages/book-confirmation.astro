---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
const headerData = {
  headerH1: `Thank you for getting<br><span class="text-accent">Our Book</span>`,
  imagePath: "/src/assets/right-rudder-marketing-team.jpeg",
  imageAlt: "Right Rudder Marketing Team",
};
---

<BaseLayout
  siteTitle="Thank you for getting our book | Right Rudder Marketing"
  siteDescription="Thank you for getting our book. We will contact you soon regarding your request."
  keywords="book confirmation, right rudder marketing, flight school handbook, marketing knowledge"
>
  <Header data={headerData} />

  <section class="py-16 px-5 bg-white">
    <div
      class="flex flex-col items-center text-2xl mx-auto text-center gap-8 max-w-2xl bg-primary-200 rounded-xl p-8"
    >
      <FaCheckCircle
        className="text-9xl text-primary-dark-500 hover:text-primary-300 duration-500 ease-in-out"
      />

      <p class="text-gray-600 leading-relaxed">
        Thank you for your interest in the <strong
          >Flight School Handbook of Marketing Knowledge</strong
        >. We are looking forward to working with you soon. We will review your
        message and get back with you within 1-5 business days.
      </p>
      <p class="text-gray-600 leading-relaxed">
        You can also give us a call at <a
          class="text-primary hover:text-primary-dark hover:underline duration-300"
          href=`tel:${PHONE_NUMBER}`
          >{PHONE_NUMBER}
          <br />
        </a> or send us an email at <a
          class="text-primary hover:text-primary-dark hover:underline duration-300"
          href=`mailto:${EMAIL_ADDRESS}`>{EMAIL_ADDRESS}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
